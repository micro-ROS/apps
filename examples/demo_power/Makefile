-include $(TOPDIR)/Make.defs

# uROS-publisher built-in application info

CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_PRIORITY ?= SCHED_PRIORITY_DEFAULT
CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_STACKSIZE ?= 65000

APPNAME = demo_power
PRIORITY = $(CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_PRIORITY)
STACKSIZE = $(CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_STACKSIZE)

# uROS-publisher Example

ASRCS =
CSRCS =
MAINSRC = demo_power.c 

CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_PROGNAME ?= demo_power$(EXEEXT)
PROGNAME = $(CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER_PROGNAME)

# UROSDIR = $(shell find $(APPDIR)/../uros_ws/install -type d -name include)
UROSDIR = $(shell find $(APPDIR)/$(CONFIG_UROS_DIR)/install -type d -name include)
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" "$(UROSDIR)"} -std=c99

MODULE = CONFIG_UROS_EXAMPLES_DEMO_POWER_PUBLISHER

include $(APPDIR)/Application.mk
