#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_MOTOR_JOYSTICK
	tristate "Tupec demo - Joystick Logitech 3D PRO driver for motor test"
	default n
	---help---
		Enable the USB Joystick Logitech extreme 3D PRO for motor

if EXAMPLES_MOTOR_JOYSTICK

config EXAMPLES_MOTOR_JOYSTICK_PROGNAME
	string "Program name"
	default "jsmotor"
	depends on BUILD_LOADABLE
	---help---
		This is the name of the program that will be use when the program for  
		motor joystick is installed.

config EXAMPLES_MOTOR_JOYSTICK_STACKSIZE
	int "Task stack size"
	default 2048
endif
