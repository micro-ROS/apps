-include $(TOPDIR)/Make.defs

# uROS-publisher built-in application info

CONFIG_UCS_PUB_EXAMPLE_PRIORITY ?= SCHED_PRIORITY_DEFAULT
CONFIG_UCS_PUB_EXAMPLE_STACKSIZE ?= 65000

APPNAME = ucs_pub
PRIORITY = $(CONFIG_UCS_PUB_EXAMPLE_PRIORITY)
STACKSIZE = $(CONFIG_UCS_PUB_EXAMPLE_STACKSIZE)

# uROS-publisher Example

ASRCS =
CSRCS = init_pub_6lowpan.c
MAINSRC = ucs_pub_main.c

CONFIG_UCS_PUB_EXAMPLE_PROGNAME ?= ucs_pub$(EXEEXT)
PROGNAME = $(CONFIG_UCS_PUB_EXAMPLE_PROGNAME)
UCS_PUB_INCLUDES = $(shell find $(APPDIR)/$(CONFIG_UROS_DIR)/install -type d -name include)
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" "$(UCS_PUB_INCLUDES)"} -std=c99

MODULE = CONFIG_UCS_PUB_EXAMPLE

include $(APPDIR)/Application.mk
